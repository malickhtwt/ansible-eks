apiVersion: eksctl.io/v1alpha5
kind: ClusterConfig

metadata:
  name: {{ cluster_name }}
  region: {{ aws_region }}

nodeGroups:
  - name: {{ nodegroup_name }}
    instanceType: {{ instancetype }}
    desiredCapacity: {{ desiredcapacity }}
    volumeSize: {{ volumesize }}
    availabilityZones: ["us-east-1a","us-east-1b","us-east-1c","us-east-1d","us-east-1f"]
    ssh:
      publicKeyPath: /home/vagrant/eks/ansible-eks.pub
addons:
 - name: "certmanager policy"  
   wellKnownPolicies:
    certManager: True
